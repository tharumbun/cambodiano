---
import { WritingItem } from '@components/cards'; // Optionally create a BookItem component if needed
import { Header } from '@components/misc';
import { BaseHead } from '@components/seo';
import { SITE_DESCRIPTION, SITE_TITLE } from '@data/index';
import { getCollection } from 'astro:content';
import RootLayout from '@layouts/root-layout.astro';

// Get the bookshelf collection and sort by publication date (most recent first)
const bookshelf = (await getCollection('bookshelf')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang='en'>
	<head>
		<BaseHead
			title={SITE_TITLE}
			description={SITE_DESCRIPTION}
			image='/images/ogimage.png'
		/>
	</head>
	<RootLayout>
		<div
			id='Header+title'
			class='flex flex-col w-full gap-6 max-w-xl'>
			<Header />
			<h1 class='w-full text-7xl font-medium tracking-tight'>bookshelf</h1>

			{
				bookshelf.map((book) => (
					<WritingItem  // Optionally, rename or create a new component (BookItem) for books
						title={book.data.title}
						date={book.data.pubDate}
					/>
				))
			}
		</div>
	</RootLayout>
</html>
